<form class="form-horizontal" id="adding_game_form" action="{{ path('profileGameSave') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group">
        {%  set errors = form_errors(form) %}

        {% if errors %}
            <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <span class="form-error"> {{ errors | raw }} </span>
            </div>
        {% endif %}

        {% if success is defined  %}
            <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <span> {{ "Successfully Added." }} </span>
            </div>
        {% endif %}

        <label class="control-label col-lg-3" for="fos_user_registration_form_fullName"> {{ "Game Name" | trans }} *</label>
        <div class="col-lg-9">
            {{ form_widget(form.name, {'attr': {'class' : 'form-control'} }) }}
            <span class="form-error"> {{ form_errors(form.name) }} </span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-3" for="fos_user_registration_form_fullName"> {{ "Category" | trans }} *</label>
        <div class="col-lg-9">
            {{ form_widget(form.category, {'attr': {'class' : 'form-control'} }) }}
            <span class="form-error"> {{ form_errors(form.category) }} </span>
        </div>
    </div>
    {{ form_rest(form) }}
</form>