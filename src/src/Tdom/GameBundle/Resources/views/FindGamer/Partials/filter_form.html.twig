<form class="form-horizontal" id="filter_form_map" name="filter_form" action="{{ path('findProcessAction') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group nopadding">
        <div class="col-lg-12 nopadding">
            <div class="col-sm-3" style="padding-left: 0">
                {{ form_widget(form.category, {'attr': {'class' : 'form-control selectpicker'} }) }}
                <span class="form-error"> {{ form_errors(form.category) }} </span>
            </div>
            <div class="col-sm-3" style="padding-left: 0">
                {{ form_widget(form.games, {'attr': {'class' : 'form-control'} }) }}
                <span class="form-error"> {{ form_errors(form.games) }} </span>
            </div>
            <div class="col-sm-3" style="padding-left: 0">
               {{  form_widget(form.type, {'attr': {'class' : 'form-control selectpicker'} }) }}
            </div>
            <div class="col-sm-3" style="padding-right: 0">
                <div class="navbar-right">
                    <div class="form-group">
                        <a href="" class="btn form_reset"  >Filter Reset</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
</form>