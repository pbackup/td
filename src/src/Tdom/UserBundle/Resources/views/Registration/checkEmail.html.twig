{% extends "FOSUserBundle::layout.html.twig" %}

{%  block message %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for key, message in messages %}
            <div style="margin-bottom: 20px; overflow: hidden" class="col-lg-8 col-lg-offset-2">
                <div class="alert alert-dismissable alert-success flash-{{ type }}">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
{%  endblock %}

{% block content %}
    {% block fos_user_content %}
        <div class="content_bg">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="content-details">
                    <h3 class="content-details-title"> {{ "Check Email" }} </h3>
                    <div>
                        <p style="padding-top:10px">{{ 'registration.check_email'|trans({'%email%': user.email}, 'FOSUserBundle') }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endblock fos_user_content %}
{%  endblock %}